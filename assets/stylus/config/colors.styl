
$accent = hsl(148, 55%, 41%);
$black = hsl(214, 45%, 1%);
$dark = hsl(214, 45%, 7%);
$light = hsl(214, 45%, 95%);
$gray = #bbbfc4;
$dark-gray = #535354;
$white = #FFFFFF;

// css variables
:root {
  --theme-bg-color: $light;
  --theme-text-color: $dark;
}

$theme-bg-color = var(--theme-bg-color);
$theme-text-color = var(--theme-text-color);