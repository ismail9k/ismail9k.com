.main
  display: flex
  flex-wrap: wrap
  width: 100%
  border-radius: 20px
  background-color: $white
  box-shadow: 10px 10px 40px alpha($secondary, 0.1), -10px -10px 40px alpha($white, 0.9), inset 2px 2px 40px alpha($white, 0.75)
  max-width: 1200px
  margin-left: auto
  margin-right: auto
  padding: 40px 
  +tablet()
    margin: 5px
  +dark()
    border-color: $black
    background-color: $dark
    box-shadow: 0 0 40px alpha($black, 0.5)
    color: $white



.section
  display: flex
  flex-direction: column
