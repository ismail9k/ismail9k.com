
.link {
  outline-offset: 4px;
  background-image: linear-gradient(0, $secondary, $secondary);
  background-position: bottom center;
  background-size: 100% 0.12em;
  background-repeat: no-repeat;
  color: $secondary;
  text-decoration: none;
  transition: 130ms cubic-bezier(0.4, 0, 0.2, 1);

  +dark() {
    background-image: linear-gradient(0, $primary, $primary);
    color: $white;
  }

  &:hover {
    background-image: linear-gradient(0, $primary, $primary);
    background-size: 100% 100%;
  }

  &:focus {
    outline: 2px dashed;
  }
}