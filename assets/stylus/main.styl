@font-face
  font-weight: 500
  font-style: normal
  font-family: 'Fira Code'
  src: local('Fira Code'), url('../fonts/FiraCode-Regular.woff2') format('woff2'), url('../fonts/FiraCode-Regular.woff') format('woff'), url('../fonts/FiraCode-Regular.ttf') format('truetype')
  font-display: swap

@font-face
  font-weight: 700
  font-style: normal
  font-family: 'Fira Code'
  src: local('Fira Code Bold'), url('../fonts/FiraCode-Bold.woff2') format('woff2'), url('../fonts/FiraCode-Bold.woff') format('woff'), url('../fonts/FiraCode-Bold.ttf') format('truetype')
  font-display: swap

html,
body
  margin: 0
  padding: 0
  font-family: 'Fira Code', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  transition: 100ms
  scroll-behavior: smooth

*
  box-sizing: border-box

.main
  margin: 40px
  border: 1px solid $white
  border-radius: 20px
  background-color: $white
  box-shadow: 10px 10px 40px alpha($secondary, 0.1), -10px -10px 40px alpha($white, 0.9), inset 2px 2px 40px alpha($white, 0.75)
  +tablet()
    margin: 5px
  +dark()
    border-color: $black
    background-color: $dark
    box-shadow: 0 0 40px alpha($black, 0.5)
    color: $white

.contact-button,
.resume-button
  padding: 0.2em 0.05em
  background-image: linear-gradient(0, $secondary, $secondary)
  background-position: bottom center
  background-size: 100% 0.12em
  background-repeat: no-repeat
  text-decoration: none
  font-size: $font-massive
  line-height: 1.5em

.resume-button
  font-size: $font-small

.sr-only
  position: absolute
  overflow: hidden
  clip: rect(0, 0, 0, 0)
  margin: -1px
  padding: 0
  width: 1px
  height: 1px
  border: 0
