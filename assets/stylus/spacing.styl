for size, i in $padding {
  .p-{i} {
    padding: size;
  }

  .pl-{i} {
    padding-left: size;
  }

  .pr-{i} {
    padding-right: size;
  }

  .pt-{i} {
    padding-top: size;
  }

  .pb-{i} {
    padding-bottom: size;
  }
}

for size, i in $margin {
  .m-{i} {
    margin: size;
  }

  .ml-{i} {
    margin-left: size;
  }

  .mr-{i} {
    margin-right: size;
  }

  .mt-{i} {
    margin-top: size;
  }

  .mb-{i} {
    margin-bottom: size;
  }
}
